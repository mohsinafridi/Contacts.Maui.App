<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contacts.Maui.Views.Department.DepartmentsPage"
              xmlns:viewmodel ="clr-namespace:Contacts.Maui.ViewModel.DepartmentViewModels"
              x:DataType="viewmodel:GetDepartmentsViewModel"
             Title="Departments">


    <Grid
     Padding="5"
     RowDefinitions="*, 50"
     ColumnDefinitions="*">

        <ListView ItemsSource="{Binding Departments}"
        Grid.Row="0"
        Grid.Column="0"
        x:Name="listDepartments"
        BackgroundColor="Transparent"
        SeparatorColor="Silver"
        RowHeight="65"
        ItemSelected="ListDepartments_ItemSelected" 
        ItemTapped="ListDepartments_ItemTapped">

            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell 
                 Text="{Binding Name}" 
                 >
                        <TextCell.ContextActions>
                            <MenuItem Text="Delete" 
                                   IsDestructive="True"                                   
                                      Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:GetDepartmentsViewModel}}, Path=DeleteDepartmentCommand}"
                                   CommandParameter="{Binding .}"></MenuItem>
                        </TextCell.ContextActions>
                    </TextCell>

                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>


        <VerticalStackLayout  HeightRequest="70"  Spacing="5" Padding="10,20,20,20">
            <Button x:Name="BtnAdd" Text="Add" Clicked="BtnAdd_Clicked"></Button>
        </VerticalStackLayout>
    </Grid>
</ContentPage>